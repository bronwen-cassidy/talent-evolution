<?xml version="1.0" encoding="UTF-8"?>
<xml>
    <questionnaire name="Performance Monitoring Review Summary" title="Performance Monitoring Review Summary">

        <group name="Status" title="Status">
            <question id="1" type="LastUpdated" name="Performance Review Last Updated"/>
            <question id="2" type="LastUpdatedBy" name="Last Updated By" title="Last Updated By"/>
        </group>

        <group name="Meeting Details" title="Meeting Details">
            <question id="3" type="Date" name="Meeting Date" title="Date of Meeting" mandatory="Y"/>
            <question id="4" type="Select" name="Meeting Type" title="Type of Meeting" mandatory="Y">
                <answer value="Mid-Placement Review" text="Mid-Placement Review"/>
                <answer value="End of Placement Review" text="End of Placement Review"/>
            </question>
            <question id="5" type="TextBox" name="Attendees" title="Attendees" mandatory="Y"/>
            <question id="6" type="Text" name="Location" title="Location" length="50"/>
        </group>

        <group name="Specialism Competencies" title="Specialism Competencies">
            <question id="7" type="Select" name="Progress Satisfactory" title="Progress Satisfactory" mandatory="Y">
                <answer value="Yes" text="Yes"/>
                <answer value="No" text="No"/>
            </question>
            <question id="8" type="Comments" name="Required Actions" title="Required actions and/or general comments" length="90"/>
        </group>

        <group name="Work Performance Objectives" title="Work Performance Objectives">
            <question id="9" type="Select" name="Progress Satisfactory" title="Progress against Work Performance Objectives Satisfactory" mandatory="Y">
                <answer value="Yes" text="Yes"/>
                <answer value="No" text="No"/>
            </question>
            <question id="10" type="Comments" name="Required Actions" title="Required actions and/or general comments" length="70"/>
        </group>

        <group name="Conduct" title="Conduct">
            <question id="11" type="Select" name="Satisfactory Conduct" title="Satisfactory Conduct" mandatory="Y">
                <answer value="Yes" text="Yes"/>
                <answer value="No" text="No"/>
            </question>
            <question id="12" type="Comments" name="Required Actions" title="Required actions and/or general comments" length="70"/>
        </group>

        <group name="Academic Attainment" title="Academic Attainment">
            <question id="13" type="Select" name="Achieved" title="Achieved" mandatory="Y">
                <answer value="Yes" text="Yes"/>
                <answer value="No" text="No"/>
            </question>
            <question id="14" type="Comments" name="Required Actions" title="Required actions and/or general comments" length="70"/>
        </group>

        <group name="Personal Development Plan and Continuing Professional Development" title="Personal Development Plan and Continuing Professional Development">
            <question id="15" type="Select" name="Satisfactory Achievement against Objectives" title="Satisfactory Achievement against personal Development Objectives" mandatory="Y">
                <answer value="Yes" text="Yes"/>
                <answer value="No" text="No"/>
            </question>
            <question id="16" type="Comments" name="Required Actions" title="Required actions and/or general comments" length="70"/>
        </group>

        <group name="Additional Comments">
            <question id="17" type="Comments" name="Additional Comments" title="Additional Comments" length="70"/>
        </group>

        <group name="Outcomes" title="Outcomes">
            <question id="18" type="Select" name="Is the trainee recommended for a pay award?  Applicable only at certain reviews only" title="Pay award recommended" mandatory="Y">
                <answer value="Yes" text="Yes"/>
                <answer value="No" text="No"/>
                <answer value="Not applicable at this meeting" text="Not applicable at this meeting"/>
            </question>
            <question id="19" type="Select" name="Is the trainee recommended for Graduation?  Applicable at the final End of Placement review" title="Graduation recommended" mandatory="Y">
                <answer value="Yes" text="Yes"/>
                <answer value="No" text="No"/>
                <answer value="Not applicable at this meeting" text="Not applicable at this meeting"/>
            </question>
            <question id="20" type="Comments" name="Comments" title="Comments" length="70"/>
            <question id="21" type="Select" name="Review Status" title="Review Status" mandatory="Y">
                <answer value="Review Complete" text="Review Authorised"/>
                <answer value="Review Incomplete" text="Review Incomplete"/>
            </question>
        </group>

    </questionnaire>
</xml>