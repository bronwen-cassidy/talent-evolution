<?xml version="1.0" encoding="UTF-8"?>
<xml>
    <questionnaire name="Flexi Placement Proposal" title="Flexi Placement Proposal">

        <group name="Status" title="Status">
            <question id="1" type="LastUpdated" name="Flexi Placement Proposal Last Updated"/>
            <question id="2" type="LastUpdatedBy" name="Last Updated By" title="Last Updated By"/>
        </group>

        <group name="Details of Host Organisation">
            <question id="3" type="Text" name="Host Organisation Name" title="Host Organisation Name" length="25"/>
            <question id="4" type="Text" name="Host Organisation Address Line One" title="Host Organisation Address Line One" length="25"/>
            <question id="5" type="Text" name="Host Organisation Address Line Two" title="Host Organisation Address Line Two" length="25"/>
            <question id="6" type="Text" name="Host Organisation Address Line Three" title="Host Organisation Address Line Three" length="25"/>
            <question id="7" type="Text" name="Host Organisation Post Code" title="Host Organisation Address Line Two" length="25"/>
            <question id="8" type="Text" name="Contact Name " title="Contact Name" length="25"/>
            <question id="9" type="Text" name="Contact Telephone Number " title="Contact Telephone Number" length="25"/>
            <question id="10" type="Text" name="Contact Email " title="Contact Email" length="25"/>
        </group>
        <group name="Please give details about the type of Organisation and the flexi placement" title="">
            <question id="11" type="TextBox" name="Placement Details" title="Placement Details" length="25"/>
        </group>
        <group name="Flexi Placement Location" title="Flexi Placement Location">
            <narrative>Flexi Placements should be SHA patch based unless there are exceptional circumstances</narrative>
            <question id="12" type="Select" name="Within which SHA is the host organisation located?" title="Within which SHA is the host organisation located?" target="Select Value1">
                <answer value="Select Value1" text="East Midlands"/>
                <answer value="Select Value2" text="East of England"/>
                <answer value="Select Value3" text="London"/>
                <answer value="Select Value4" text="North East"/>
                <answer value="Select Value5" text="North West"/>
                <answer value="Select Value6" text="South Central"/>
                <answer value="Select Value7" text="South East"/>
                <answer value="Select Value8" text="South West"/>
                <answer value="Select Value9" text="West Midlands"/>
                <answer value="Select Value10" text="Yorkshire and the Humber"/>
            </question>
            <question id="13" type="Select" name="Is the host organisation located within your SHA?" title="Is the host organisation located within your SHA?" target="Select Value1">
                <answer value="Select Value1" text="Yes"/>
                <answer value="Select Value2" text="No"/>
            </question>
        </group>
        <group name="Key Dates etc" title="Key Dates etc">
            <narrative>Please note that Flexi Placements last for a maximum of 8 weeks</narrative>
            <question id="14" type="Date" name="Flexi Placement Start Date" title="Flexi placement Start Date"/>
            <question id="15" type="Date" name="Flexi Placement End Date" title="Flexi Placement End Date"/>
            <narrative>Please give details of any proposed annual leave during this period</narrative>
            <question id="16" type="Text" name="Dates" title="Holiday Dates" length="25"/>
            <question id="17" type="Text" name="Total number of days" title="Total Number of Holiday days" length="25"/>
            <narrative>Details of current and final placement</narrative>
            <question id="18" type="Date" name="End date of current placement" title="End date of current placement"/>
            <question id="19" type="Date" name="Start date of final placement" title="Start date of final placement"/>
            <narrative>Financial Assistance requirements (approved in exceptional circumstances only)</narrative>
            <question id="20" type="Select" name="Please state whether financial assistance is required" title="Please state whether financial assistance is required" target="Select Value1">
                <answer value="Select Value1" text="Yes"/>
                <answer value="Select Value2" text="No"/>
            </question>
            <question id="21" type="TextBox" name="Details of financial assistance" title="Details of financial details" length="25"/>
        </group>
        <group name="Aims, Objectives etc" title="">
            <question id="22" type="TextBox" name="Briefly summarise the aims/objectives of your proposed flexi placement " title="Aim/Objective" length="25"/>
            <question id="23" type="TextBox" name="Please explain your reason for choosing this flexi placement and how it links to your PDP" title="Reason" length="25"/>
            <question id="24" type="TextBox" name="What are your key learning objectives?" title="Key learning objectives?" length="25"/>
            <question id="25" type="TextBox" name="Competencies to be developed during the flexi placement" title="Competencies" length="25"/>
            <question id="26" type="TextBox" name="Benefits of this flexi placement to the NHS" title="Benefits to the NHS" length="25"/>
            <question id="27" type="TextBox" name="Benefits of this flexi placement to the trainee" title="Benefits to the trainee" length="25"/>
        </group>
        <group name="Additional Information - Practical Arrangements" title="Additional Information - Practical Arrangements">
            <narrative>Please upload documents supporting your proposal to your Talent Studio Portfolio</narrative>
            <question id="28" type="Select" name="Have you uploaded the Statement of Commitment from the flexi placement organisation?" title="Have you uploaded the Statement of Commitment from the flexi placement organisation?" target="Select Value1">
                <answer value="Select Value1" text="Yes"/>
                <answer value="Select Value2" text="No"/>
            </question>
            <question id="29" type="Select" name="Have you uploaded the job description/ role summary from the flexi placement organisation?" title="Have you uploaded the job description/ role summary from the flexi placement organisation" target="Select Value1">
                <answer value="Select Value1" text="Yes"/>
                <answer value="Select Value2" text="No"/>
            </question>
        </group>
        <group name="Proposal Progress" title="Proposal Progress">
            <question id="30" type="Select" name="Is this your final version?" title="Is this your final version?" target="Select Value1">
                <answer value="Select Value1" text="Yes"/>
                <answer value="Select Value2" text="No"/>
            </question>
            <question id="31" type="Comments" name="Trainee Comments" title="Trainee Comments"/>
        </group>
        <group name="Approvals and Recommendations" title="Approvals and Recommendations">
            <narrative>Pre-Steering Group/ Advisory Board Recommendation</narrative>
            <question id="32" type="Select" name="Programme Manager Recommendation" title="Programme Manager Recommendation" target="Select Value1" managerWrite="Y">
                <answer value="Select Value1" text="Approved"/>
                <answer value="Select Value2" text="Approved with conditions"/>
                <answer value="Select Value3" text="Not Approved"/>
            </question>
            <question id="33" type="Select" name="LDM Recommendation" title="LDM Recommendation" target="Select Value1" managerWrite="Y">
                <answer value="Select Value1" text="Approved"/>
                <answer value="Select Value2" text="Approved with conditions"/>
                <answer value="Select Value3" text="Not Approved"/>
            </question>
        </group>
        <group name="Manager Comments" title="Manager Comments">
            <question id="34" type="Comments" name="Programme Manager Comments" title="Programme Manager Comments" managerWrite="Y"/>
            <question id="35" type="Comments" name="LDM Comments" title="LDM Comments" managerWrite="Y"/>
        </group>
        <group name="Steering Group/ Advisory Group Decision" title="Steering Group/ Advisory Group Decision">
            <narrative>This section to be completed by the LDM only</narrative>
            <question id="36" type="Select" name="Decision" title="Decision" target="Select Value1" managerWrite="Y">
                <answer value="Select Value1" text="Approved"/>
                <answer value="Select Value2" text="Approved with conditions"/>
                <answer value="Select Value3" text="Not Approved"/>
            </question>
            <question id="37" type="Text" name="Information entered by" title="Information entered by" managerWrite="Y"/>
            <question id="38" type="Date" name="Information entered on" title="Information entered on" managerWrite="Y"/>
        </group>
    </questionnaire>
</xml>
