<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >

<hibernate-mapping>
    <!--
        Created by the Middlegen Hibernate plugin 2.1

        http://boss.bekk.no/boss/middlegen/
        http://www.hibernate.org/
    -->

    <class
        name="com.zynap.talentstudio.questionnaires.QuestionAttribute"
        table="QUESTIONS"
        dynamic-update="true"
        dynamic-insert="true"
        >
        <cache usage="nonstrict-read-write"/>

        <id
            name="id"
            type="long"
            column="ID"
            unsaved-value="null"
            >
            <meta attribute="use-in-equals">true</meta>
            <meta attribute="use-in-tostring">true</meta>

            <generator class="sequence">
                <param name="sequence">QUE_MODEL_SQ</param>
            </generator>
        </id>

        <property
            name="narrative"
            type="java.lang.String"
            column="NARRATIVE"
            >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
            name="title"
            type="java.lang.String"
            column="TITLE"
            >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
            name="target"
            type="java.lang.String"
            column="TARGET"
            >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
            name="length"
            type="java.lang.Integer"
            column="LENGTH"
            />
        <property
            name="sortOrder"
            type="java.lang.Integer"
            column="SORT_ORDER"
            />

        <property
            name="textId"
            type="java.lang.String"
            column="TEXT_ID"
            >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
            name="questionType"
            type="java.lang.String"
            column="QUESTION_TYPE"
            >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
            name="labelDisplayable"
            type="true_false"
            column="LABEL_DISPLAYABLE"
            />

        <property
            name="hidden"
            type="true_false"
            column="IS_HIDDEN"
            />

        <property
            name="managerWrite"
            type="true_false"
            column="MANAGER_WRITE"
            >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <!-- Associations -->

        <!-- bi-directional many-to-one association to Node -->
        <many-to-one
            name="dynamicAttribute"
            class="com.zynap.talentstudio.organisation.attributes.DynamicAttribute"
            cascade="save-update"
            >
            <column name="DA_ID"/>
        </many-to-one>

        <!-- bi-directional many-to-one association to Area -->
        <many-to-one
            name="lineItem"
            class="com.zynap.talentstudio.questionnaires.LineItem"
            >
            <column name="QUESTION_LINE_ITEM_ID"/>
        </many-to-one>

        <many-to-one
            name="questionGroup"
            class="com.zynap.talentstudio.questionnaires.QuestionGroup"
            >
            <column name="QUE_GROUP_ID"/>
        </many-to-one>

    </class>
</hibernate-mapping>
