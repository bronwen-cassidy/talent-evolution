<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >

<hibernate-mapping>
    <!--
        Created by the Middlegen Hibernate plugin 2.1

        http://boss.bekk.no/boss/middlegen/
        http://www.hibernate.org/
    -->

    <class
            name="com.zynap.talentstudio.questionnaires.LineItem"
            table="QUESTION_LINE_ITEMS"
            dynamic-update="true"
            dynamic-insert="true"
            >

        <id
                name="id"
                type="long"
                column="ID"
                unsaved-value="null"
                >
            <meta attribute="use-in-equals">true</meta>
            <meta attribute="use-in-tostring">true</meta>

            <generator class="sequence">
                <param name="sequence">QUE_MODEL_SQ</param>
            </generator>
        </id>

        <property
                name="dynamic"
                type="true_false"
                column="DYNAMIC"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="canDisable"
                type="true_false"
                column="CAN_DISABLE"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <property
                name="label"
                type="java.lang.String"
                column="LABEL"
                >
            <meta attribute="use-in-tostring">true</meta>
        </property>

        <!-- Associations -->

        <!-- bi-directional many-to-one association to Node -->
        <many-to-one
                name="multiQuestion"
                class="com.zynap.talentstudio.questionnaires.MultiQuestionItem"
                not-null="true"               
                >
            <column name="MULTI_QUESTION_ID"/>
        </many-to-one>

        <bag name="questions"
             lazy="false"
             inverse="true"
             cascade="all"
             order-by="SORT_ORDER">
            <key>
                <column name="QUESTION_LINE_ITEM_ID"/>
            </key>
            <one-to-many class="com.zynap.talentstudio.questionnaires.QuestionAttribute"/>
        </bag>

    </class>
    
</hibernate-mapping>
